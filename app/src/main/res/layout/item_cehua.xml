<?xml version="1.0" encoding="utf-8"?>
<com.zzb.zzblibrary.lateralspreads.AutoSwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px120"
    android:addStatesFromChildren="true"
    android:descendantFocusability="blocksDescendants"
    android:clickable="true"
    app:ios="false"
    android:id="@+id/roll"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:text="项目中我是任意复杂的原Item布局"/>


    <Button
        android:id="@+id/btnTop"
        android:layout_width="@dimen/px120"
        android:layout_height="match_parent"
        android:background="#d9dee4"
        android:text="置顶"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnUnRead"
        android:layout_width="@dimen/px240"
        android:layout_height="match_parent"
        android:background="#ecd50a"
        android:clickable="true"
        android:text="标记未读"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/px120"
        android:layout_height="match_parent"
        android:background="@color/actionsheet_red"
        android:text="删除"
        android:textColor="@android:color/white"/>



</com.zzb.zzblibrary.lateralspreads.AutoSwipeMenuLayout>