<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xrefreshview_footer_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px100"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/white"
    android:padding="@dimen/px20">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layLoadMore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/xrefreshview_footer_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/progressbar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/px25" />

    </com.zhy.autolayout.AutoLinearLayout>


    <TextView
        android:id="@+id/xrefreshview_footer_hint_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/xrefreshview_footer_hint_normal"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/px25" />

    <TextView
        android:id="@+id/xrefreshview_footer_click_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/xrefreshview_footer_hint_ready"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/px25" />
</com.zhy.autolayout.AutoRelativeLayout>