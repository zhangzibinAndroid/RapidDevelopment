<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zzb="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px700"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="@dimen/px700"
        android:layout_height="@dimen/px250"
        android:background="@drawable/shape_progress_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px20"
            android:text="正在更新"
            android:textColor="@color/actionsheet_blue"
            android:textSize="@dimen/px35"
            android:textStyle="bold" />

        <com.zzb.zzblibrary.progress.HorizontalProgressBarWithNumber
            android:id="@+id/horizontalProgressBarWithNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/px50"
            android:layout_marginRight="@dimen/px50"
            android:padding="@dimen/px10"
            zzb:progress_text_color="#ffF53B03"
            zzb:progress_text_size="20sp"
            zzb:progress_unreached_color="#ffF7C6B7" />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginRight="@dimen/px50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/px30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/px30" />

            <TextView
                android:id="@+id/tv_allprogress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/px30" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>