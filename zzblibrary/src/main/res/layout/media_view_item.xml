<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/media_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/mask_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/check_image"
        android:layout_width="@dimen/px36"
        android:layout_height="@dimen/px36"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/px10"
        android:layout_marginTop="@dimen/px10"
        android:src="@drawable/btn_unselected" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/video_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#6e000000"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px06"
            android:layout_marginLeft="@dimen/px12"
            android:layout_marginTop="@dimen/px06"
            android:text="@string/video"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px25" />

        <TextView
            android:id="@+id/textView_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/px06"
            android:layout_marginRight="@dimen/px12"
            android:layout_marginTop="@dimen/px06"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/px24" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoFrameLayout>